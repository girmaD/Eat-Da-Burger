<h1>Burgers!</h1>

<h2>Available Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}
        <button data-id="{{this.id}}" class="devour_it">Devour It</button>
        </p>
      
    </li>
    {{/unless}}
    
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}        
      </p>
      
    </li>
    {{/if}}
    
  {{/each}}
</ul>

<h2>Add A Burger</h2>
<form class="create-form">

  {{!-- <div class="form-group"> --}}
    {{!-- <label for="burger">Burger Name:</label> --}}
    <textarea type="textarea" id="burger" name="name"></textarea>
  {{!-- </div> --}}

  
  <button type="submit">Add Burger</button>
  <p>Enter the buger you want to eat and CLICK enter</p>
</form>

