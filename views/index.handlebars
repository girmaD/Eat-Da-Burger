<div class="jumbotron">
      <h1 class="text-center">Burgers! Burgers! Burgers!</h1>
</div>
<div class="container w-75 pb-4" id="large_container">
{{!-- <h1 class="display-4 text-center bg-dark text-white px-0 py-3">Burgers! Burgers! Burgers!</h1> --}}


<img src="http://clipground.com/images/beefburger-clipart-4.jpg" alt="" class="center">


  <div class="row ">
      <div class="col-6 ">
        <h2 class="pl-4 ">Available Burgers!</h2>

        <ul class="">
          {{#each burgers}}
            {{#unless this.devoured}}
            <li class=" mb-1">
              <p class="btn btn-outline-secondary">
                {{this.id}}. {{this.burger_name}}
                <button class="btn btn-success btn-sm pl-3 devour_it" data-id="{{this.id}}">Devour It</button>
              </p>              
            </li>
            
            {{/unless}}
            
          {{/each}}
        </ul>
    </div>
      <div class="col-6 ">
        <h2 class="text-muted">Devoured Burgers</h2>
        <ul class="">
          {{#each burgers}}
            {{#if this.devoured}}
            <div>
            <button class="btn btn-outline-secondary btn-sm disabled mb-1">
              {{!-- <p class=""> --}}
                {{this.id}}. {{this.burger_name}}        
              {{!-- </p>               --}}
            </button>
            </div>
            
            {{/if}}
            
          {{/each}}
        </ul>
      </div>
  </div>
   <hr class="my-4">
    <div class="container text-center">
        {{!-- <h2>Add A Burger</h2> --}}
        <form class="create-form">

          {{!-- <div class="form-group"> --}}
            {{!-- <label for="burger">Burger Name:</label> --}}
            <textarea type="textarea" id="burger" name="name" placeholder="add a burger here"></textarea>
          {{!-- </div> --}}

          <p>
          <button class="btn btn-success " type="submit">Add Burger</button>
          </p>
          <p>Enter the buger you want to eat and CLICK enter</p>
        </form>
    </div>
</div>